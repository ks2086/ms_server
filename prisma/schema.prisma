// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//  Schemat głównego itema w bazie wiedzy - posiada relację do SeriesItemRelations

model Item {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
  name String
  checkPermissions Boolean @default(true)
  onlyForTeachers Boolean @default(true)
  downloadHash String @unique
  SeriesItemRelations SeriesItemRelations[]
}

//  Schemat serii wydawniczych - posiada relację do SeriesItemRelations

model Series {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
  name String
  SeriesItemRelations SeriesItemRelations[]
}

//  Tabela relacyjna dla Serii i Itemów, 1 Item : n Serii

model SeriesItemRelations {
  id Int @id @default(autoincrement())
  seriesId Int
  itemId Int
  series Series @relation(fields: [seriesId], references: [id])
  item Item @relation(fields: [itemId], references: [id])
}

//  Tabela dla głównych kategorii -> języki, wychowanie przedszkolne itp

model MainCategories {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
  fullName String
  shortName String
  crmName String
  isLanguage Boolean @default(true)
  hasSubcategories Boolean @default(true)
}

